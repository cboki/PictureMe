  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/1264210/pexels-photo-1264210.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
    <div class="banner-content">
      <%= image_tag "logo.png", height: 50, class: "logo" %>
      <p><span id="banner-typed-text">Text</span></p>

      <%= form_tag photographers_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Where do you want to do your shooting ?"%>
      <% end %>
        <%= link_to 'See all the photographers', photographers_path, class: 'btn btn-danger booking'   %>
      </div>
    </div>
  </div>
