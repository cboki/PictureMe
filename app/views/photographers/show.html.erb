              <ul class="list-inline">
                <% @photographer.categories.each do |category| %>
                  <li><%= category.name %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<div class="wrapper" id="wrapper-reviews">
  <div class="container">
    <div class="reviews">
      <div class="row">
        <div class="col-xs-12 col-lg-4">
          <h4>They liked the experiences:</h4>
          <div class="review-card">
            <p class="stars">
              <!-- TODO! Modify the 5 and put @photographer.stars when merged. -->
              <% 5.times do %>
                <i class="fa fa-star" style="color: #ffb400"></i>
              <% end %>
            </p>
          </div>
        </div>
        <% @photographer.reviews.each do |review| %>
        <div class="col-xs-12 col-lg-4">
          <div class="review-card">
            <div class="review-star">
              <p>5 <i class="fa fa-star" style="color: #ffb400"></i></p>
            </div>
            <div class="review-content">
              <p><%= review.content %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="booking-form">

    </div>
  </div>
</div>
